	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:logger="org.foomo.zugspitze.spark.components.logger.*"
	minWidth="955"
	minHeight="600"
	>
	<fx:Script>
		<![CDATA[
			import org.foomo.core.Foomo;
			import org.foomo.logging.LogLevel;
			import org.foomo.logging.TerminalTarget;
			import org.foomo.managers.LogManager;

			//-----------------------------------------------------------------------------------------
			// ~ Settings
			//-----------------------------------------------------------------------------------------

			Foomo.defaultServerUrl = 'http://bognertv.radact.interact.com';

			LogManager.defaultLoggingTarget = TerminalTarget;
			LogManager.level = LogLevel.ALL;

		]]>
	</fx:Script>
	<fx:Style source="assets/css/Application.css"/>
	<logger:Component width="100%" height="100%"/>
